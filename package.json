{
    "name": "miku",
    "version": "1.0.0",
    "description": "Miku by Harukoto",
    "main": "dist/index.js",
    "scripts": {
        "format:prettier": "prettier --write .",
        "format": "run-s format:*",
        "tsc:build": "tsc -p .",
        "tsc:alias": "tsc-alias",
        "git:pull": "git pull",
        "docker:build": "docker compose build",
        "docker:up": "docker compose up -d",
        "build": "run-s tsc:*",
        "start": "run-s format build && node --experimental-global-webcrypto ./dist/index.js",
        "dev": "ts-node -r tsconfig-paths/register ./src/index.ts",
        "update": "run-s git:* docker:*"
    },
    "dependencies": {
        "@discord-player/extractor": "^7.0.0",
        "@discordjs/opus": "^0.9.0",
        "@discordjs/voice": "^0.18.0",
        "axios": "^1.7.9",
        "discord-player": "^7.0.0",
        "discord-player-youtubei": "^1.3.7",
        "discord.js": "14.16.3",
        "dotenv": "^16.4.7",
        "ffmpeg-static": "^5.2.0",
        "glob": "^7.2.3",
        "mongoose": "^8.9.2",
        "tweetnacl": "^1.0.3",
        "undici": "6"
    },
    "devDependencies": {
        "@types/glob": "^7.2.0",
        "@types/node": "^22.10.2",
        "npm-run-all": "^4.1.5",
        "prettier": "^3.4.2",
        "ts-node": "^10.9.2",
        "tsc-alias": "^1.8.10",
        "tsconfig-paths": "^4.2.0",
        "typescript": "^5.7.2"
    },
    "private": true,
    "binary": {
        "module_name": "opus",
        "module_path": "./lib/binding/",
        "host": "https://github.com/discordjs/opus/releases/download/"
    }
}
